<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="210dp"
            android:layout_height="237dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/tv_NameApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="@string/nombreApp"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_eslogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/esloganApp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"/>

        <Button
            android:id="@+id/btn_comienza"
            android:layout_width="209dp"
            android:layout_height="64dp"
            android:backgroundTint="@color/white"
            android:text="@string/comienzabtn"
            android:textColor="@color/azulOsc"
            android:textSize="28sp"
            android:layout_marginTop="40dp"/>

        <!-- Texto RegÃ­strate -->
        <TextView
            android:id="@+id/tv_registrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registrate"
            android:textAlignment="center"
            android:textColor="@color/azul"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
