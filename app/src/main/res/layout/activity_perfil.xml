<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    tools:context=".PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- Imagen de usuario -->
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="206dp"
            android:layout_height="232dp"
            android:src="@drawable/ic_usuario"
            android:layout_marginTop="40dp"/>

        <!-- Nombre principal -->
        <TextView
            android:id="@+id/tv_Nombres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <!-- Campo nombre de usuario -->
        <EditText
            android:id="@+id/et_NameUser"
            android:layout_width="251dp"
            android:layout_height="43dp"
            android:background="@drawable/et_oval"
            android:hint="@string/nomusuario"
            android:inputType="text"
            android:layout_marginTop="20dp"/>

        <!-- Campo apellido -->
        <EditText
            android:id="@+id/et_LastnameUser"
            android:layout_width="251dp"
            android:layout_height="43dp"
            android:background="@drawable/et_oval"
            android:hint="@string/apeusuario"
            android:inputType="text"
            android:layout_marginTop="15dp"/>

        <!-- Campo correo -->
        <EditText
            android:id="@+id/et_EmailU"
            android:layout_width="251dp"
            android:layout_height="43dp"
            android:background="@drawable/et_oval"
            android:hint="@string/correoE"
            android:inputType="textEmailAddress"
            android:layout_marginTop="15dp"/>

        <!-- Campo telÃ©fono -->
        <EditText
            android:id="@+id/et_PhoneU"
            android:layout_width="251dp"
            android:layout_height="43dp"
            android:background="@drawable/et_oval"
            android:hint="@string/numero"
            android:inputType="phone"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/btn_editar"
            android:layout_width="132dp"
            android:layout_height="53dp"
            android:backgroundTint="@color/white"
            android:text="@string/editar"
            android:textColor="@color/azulOsc"
            android:textSize="25sp"
            android:layout_marginTop="30dp"/>

        <!-- Logo y nombre app abajo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="55dp"
                android:layout_height="37dp"
                android:src="@mipmap/ic_launcher_foreground"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_NombreAppP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
