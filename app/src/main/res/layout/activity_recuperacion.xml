<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    tools:context=".activities.RecuperacionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="187dp"
            android:layout_height="149dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/tv_AppN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="@string/nombreApp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_infoRecuperacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recuperarContra"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/et_emailRecuperacion"
            android:layout_width="266dp"
            android:layout_height="48dp"
            android:background="@drawable/et_oval"
            android:ems="10"
            android:hint="@string/correo"
            android:paddingStart="10dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btn_Enviar"
            android:layout_width="169dp"
            android:layout_height="59dp"
            android:backgroundTint="@color/white"
            android:text="@string/enviar"
            android:textColor="@color/azulOsc"
            android:textSize="30sp"
            android:layout_marginTop="40dp"/>

    </LinearLayout>
</ScrollView>
